<div class="container">
<h1>Edit Contribution:</h1>
<hr>
<div class="col-md-6">
<form action=<%= "/contributions/" + contribution.id + "?_method=PUT" %> method="POST">
  <div class="row">
    <div class="form-group">
      <label for="action">I would like to:</label>
      <select class="form-control" name="action">
        <option value="giveaway">giveaway</option>
        <option value="borrow">borrow</option>
        <option value="exchange">exchange</option>
      </select>
    </div>
    <div class="form-group">
      <label for="item">*Item:</label>
      <input type="text" class="form-control" name="item" id="item" value="<%=contribution.item%>" required>
    </div>
    <div class="form-group">
      <label for="description">Description:</label>
      <input type="text" class="form-control" name="description" id="description" value="<%=contribution.description%>">
    </div>
    <div class="form-group">
      <label for="contributor">Preferred collection address:</label>
      <input type="text" class="form-control" name="address" id="address" value="<%=contribution.address%>">
    </div>
    <div class="form-group">
      <label for="status">Status:</label>
      <select class="form-control" name="status">
        <option value="available">available</option>
        <option value="unavailable">unavailable</option>
      </select>
    </div>
    <div class="form-group">
      <label for="contributor">Contributor ID:</label>
      <input type="text" class="form-control" name="contributor" id="contributor" value="<%=contribution.contributor%>" readonly="true">
    </div>
    <div class="form-group">
      <label for="contributor">Contributor email:</label>
      <input type="text" class="form-control" name="contributorEmail" id="contributorEmail" value="<%=contribution.contributorEmail%>" readonly="true">
    </div>
    <div class="form-group">
      <button type="submit" class="btn btn-success btn-block">Update</button>
    </div>
  </div>
</form>
<small>Note: Image edit service is currently unavailable.</small>
</div>
</div>
